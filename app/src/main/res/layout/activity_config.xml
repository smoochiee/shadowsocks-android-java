<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@android:color/black">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:textAllCaps="true"
            android:layout_width="80dp"
            android:textColor="@color/accent_papercraft"
            android:layout_height="wrap_content"
            android:text="vpn by smoochie"/>

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout3"
        android:background="@android:color/transparent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true">


        <com.github.clans.fab.FloatingActionMenu
            android:id="@+id/menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            fab:menu_animationDelayPerItem="80"
            fab:menu_backgroundColor="@android:color/transparent"
            fab:menu_buttonSpacing="0dp"
            fab:menu_colorNormal="#ff00a1"
            fab:menu_colorPressed="#9000ff"
            fab:menu_colorRipple="#995e00ff"
            fab:menu_fab_hide_animation="@anim/fab_slide_in_from_right"
            fab:menu_fab_show_animation="@anim/fab_scale_up"
            fab:menu_fab_size="normal"
            fab:menu_icon="?android:attr/fingerprintAuthDrawable"
            fab:menu_openDirection="up"
            fab:menu_shadowRadius="4dp"
            fab:menu_shadowXOffset="2dp"
            fab:menu_shadowYOffset="4dp">

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/facebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_colorNormal="#0062ff"
                fab:fab_colorPressed="#00e1ff"
                fab:fab_colorRipple="#6200ff"
                android:background="@android:color/transparent"
                android:src="@android:drawable/ic_menu_view"
                fab:fab_size="mini" />

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/youtube"
                fab:fab_colorNormal="#ff0015"
                fab:fab_colorPressed="#ff00d5"
                fab:fab_colorRipple="#7220f5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:src="@android:drawable/ic_menu_slideshow"
                fab:fab_size="mini" />

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/about"
                fab:fab_colorNormal="#aa00ff"
                fab:fab_colorPressed="#d819f1"
                fab:fab_colorRipple="#864ae7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_dialog_info"
                fab:fab_size="mini" />

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/reset"
                fab:fab_colorNormal="#00ff33"
                fab:fab_colorPressed="#e1ff00"
                fab:fab_colorRipple="#ff4000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_menu_delete"
                fab:fab_size="mini" />


        </com.github.clans.fab.FloatingActionMenu>




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:id="@+id/linearLayout4"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/linearLayout5">

        <TextView
            android:layout_marginLeft="8dp"
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_host"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/accent_papercraft"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editText1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@android:drawable/alert_dark_frame"
            android:ems="10"
            android:maxLines="1"
            android:textColor="@color/accent_papercraft"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_below="@+id/linearLayout4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/linearLayout3"
        android:layout_toStartOf="@+id/linearLayout3"
        android:id="@+id/linearLayout5">

        <TextView
            android:layout_marginLeft="8dp"
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_password"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/accent_papercraft"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editText3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@android:drawable/alert_dark_frame"
            android:ems="10"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="@color/accent_papercraft" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_below="@+id/linearLayout5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_marginLeft="8dp"
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_port"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/accent_papercraft"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@android:drawable/alert_dark_frame"
            android:ems="6"
            android:inputType="number"
            android:maxLength="5"
            android:maxLines="1"
            android:textColor="@color/accent_papercraft" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/linearLayout5"
        android:layout_toRightOf="@+id/linearLayout6"
        android:orientation="horizontal"
        android:layout_toStartOf="@+id/linearLayout3"
        android:id="@+id/linearLayout9"
        android:layout_toLeftOf="@+id/linearLayout3">
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="@string/label_method"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/accent_papercraft"
            android:textStyle="bold" />

        <Spinner
            android:layout_marginTop="8dp"
            android:id="@+id/spinner1"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/alert_dark_frame"
            android:entries="@array/encrypt"
            android:spinnerMode="dropdown" />

    </LinearLayout>

    <LinearLayout
        android:background="@drawable/tumblr"
        android:id="@+id/AppSelectLayout"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginLeft="8dp"
        android:orientation="vertical"
        android:padding="13dp"
        android:tag="AppSelect"
        android:layout_below="@+id/linearLayout6"
        android:layout_toStartOf="@+id/linearLayout3">

        <TextView
            android:id="@+id/textViewAppSelectTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tunnel App"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/accent_papercraft"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewAppSelectDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/accent_papercraft"
            android:text="@string/select_app_detail"
            android:textAppearance="?android:attr/textAppearanceSmall" />

    </LinearLayout>

    <Button
        android:id="@+id/button2"
        android:layout_marginRight="10dp"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:textColor="@color/accent_papercraft"
        android:text="20s"
        android:background="#000000"
        android:layout_below="@+id/linearLayout"
        android:layout_alignStart="@+id/button3" />

    <Button
        android:id="@+id/button3"
        android:background="#000000"
        android:layout_marginRight="10dp"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:textColor="@color/accent_papercraft"
        android:text="25s"
        android:layout_below="@+id/linearLayout4"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/button4"
        android:background="#000000"
        android:layout_marginRight="10dp"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:textColor="@color/accent_papercraft"
        android:text="30s"
        android:layout_below="@+id/linearLayout5"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/linearLayout2"
        android:orientation="horizontal"
        android:layout_above="@+id/linearLayout4"
        android:id="@+id/linearLayout"
        android:background="@drawable/header2">
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:id="@+id/scrollViewLog"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/AppSelectLayout"
        android:layout_toStartOf="@+id/linearLayout3"
        android:background="@android:color/transparent">


        <TextView
            android:id="@+id/textViewLog"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:padding="13dp"
            android:textColor="@color/accent_papercraft"
            android:textAppearance="?android:attr/textAppearanceSmall" />


    </ScrollView>


</RelativeLayout>
